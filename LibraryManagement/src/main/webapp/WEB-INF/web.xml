<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Library Management System</display-name>

    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.library.servlet.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>IssueBookServlet</servlet-name>
    <servlet-class>com.library.servlet.IssueBookServlet</servlet-class>
   </servlet>

<servlet-mapping>
    <servlet-name>IssueBookServlet</servlet-name>
    <url-pattern>/IssueBookServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>RegisterStudentServlet</servlet-name>
    <servlet-class>com.library.servlet.RegisterStudentServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>RegisterStudentServlet</servlet-name>
    <url-pattern>/RegisterStudentServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>RegisterLibrarianServlet</servlet-name>
    <servlet-class>com.library.servlet.RegisterLibrarianServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>RegisterLibrarianServlet</servlet-name>
    <url-pattern>/RegisterLibrarianServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.library.servlet.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>

 
</web-app>